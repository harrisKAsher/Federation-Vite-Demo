{
	"$schema": "https://turbo.build/schema.json#v2",
	"globalDependencies": [".env"],
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": [".env"],
			"outputs": ["dist/**"]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"dev": {
			"inputs": [".env"],
			"cache": false,
			"persistent": true
		},
		"preview": {
			"dependsOn": ["^preview"],
			"inputs": [".env"],
			"cache": false,
			"persistent": true
		},
		"database": {
			"inputs": [".env"],
			"cache": false,
			"persistent": true
		}
	}
}
